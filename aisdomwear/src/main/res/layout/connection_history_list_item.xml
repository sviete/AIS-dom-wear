<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/connections_history_list_rec"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:gravity="start"
        android:onClick="useConnection"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_delete_connection_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="@string/list_connection_history_click_to_delete"
            android:onClick="deleteConnection"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:src="@drawable/ic_delete_connection_from_history" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="35dp"
        android:onClick="useConnection"
        android:gravity="start"
        android:id="@+id/connections_history_list_rec_desc"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/connection_gate_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="55dp"
            android:onClick="useConnection"
            android:id="@+id/connections_history_list_rec_desc_full"
            android:orientation="vertical"
            android:padding="5dp">

        <TextView
            android:id="@+id/connection_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="@color/bg_gradient_end"
            android:textSize="14sp" />

        <TextView
                android:id="@+id/connection_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        <TextView
                android:id="@+id/connection_local_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_gradient_end"
                android:textSize="12sp" />

        <TextView
                android:id="@+id/connection_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        <TextView
                android:id="@+id/connection_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/bg_gradient_end"
                android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>